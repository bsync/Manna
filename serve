#!/bin/bash
echo "Serving up the Manna since 2020!"

gunicorn -b 0.0.0.0:8001 \
   -w ${WORKERS:-1} \
   -t 480 \
   -e SCRIPT_NAME=/manna \
   --reload \
   --certfile=/etc/letsencrypt/live/pleromabiblechurch.org/fullchain.pem \
   --keyfile=/etc/letsencrypt/live/pleromabiblechurch.org/privkey.pem \
   manna:app
